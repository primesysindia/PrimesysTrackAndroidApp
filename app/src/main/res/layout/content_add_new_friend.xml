<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >

    <include layout="@layout/app_bar_home" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:id="@+id/tool" />

    <RadioGroup
        android:id="@+id/rgb_choose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/tool"
        android:orientation="horizontal"
        android:background="@color/card_color"
        android:padding="@dimen/padding_normal" >

        <RadioButton
            android:id="@+id/radioname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Name"
            android:layout_marginRight="5dp"
            android:textColor="@android:color/white" />

        <RadioButton
            android:id="@+id/radiomobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mobno"
            android:layout_marginRight="5dp"

            android:textColor="@android:color/white" />

        <RadioButton
            android:id="@+id/radioemail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email"
            android:textColor="@android:color/white" />
    </RadioGroup>

    <LinearLayout
        android:id="@+id/mainlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rgb_choose"
        android:orientation="horizontal"
        android:background="@color/card_color"
        android:padding="@dimen/padding_normal" >

        <EditText
            android:id="@+id/text_username"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="@dimen/padding_normal"
            android:layout_weight=".2"
            android:ems="10"
            android:hint="Enter Name"
            android:inputType="text"

            android:padding="@dimen/padding_normal"
            android:paddingTop="6dp"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/darker_gray" >

            <requestFocus />
        </EditText>

        <ImageView
            android:id="@+id/search"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:src="@drawable/ic_action_search"
/>    </LinearLayout>

    <ListView
        android:id="@+id/list_data"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mainlayout"
        android:scrollbarStyle="outsideOverlay" >
    </ListView>

</RelativeLayout>