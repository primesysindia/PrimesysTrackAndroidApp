<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20sp"
        android:padding="@dimen/mid_padding"
        android:text="Title"
        android:id="@+id/d_title"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:gravity="center"/>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_medium"
    >




s
    <TextView android:id="@+id/txt_startdate"
        android:text="Select start date"
        android:padding="10dp"
        android:textSize="15sp"
        android:layout_marginTop="@dimen/mid_margin"
        android:layout_width="match_parent"
        android:inputType="textEmailAddress"
        android:layout_height="wrap_content"/>

    <TextView android:id="@+id/txt_enddate"
        android:text="Select end date"
        android:layout_below="@+id/txt_startdate"
        android:padding="10dp"
        android:textSize="15sp"
        android:layout_width="match_parent"
        android:inputType="textEmailAddress"
        android:layout_height="wrap_content"/>


    <EditText android:id="@+id/txt_emailid"
        android:hint="Enter your  Email-Id"
        android:layout_below="@+id/txt_enddate"

        android:layout_width="match_parent"
        android:inputType="textEmailAddress"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/pinsubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_emailid"
        android:layout_marginTop="22dp"
        android:background="@drawable/capsulshapebutton"
        android:gravity="center"
        android:text="@string/Submit"
        android:padding="5sp"

        android:textColor="@color/white" />

</RelativeLayout>
</LinearLayout>