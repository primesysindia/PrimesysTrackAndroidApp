<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20sp"
        android:padding="@dimen/mid_padding"
        android:text="Title"
        android:id="@+id/d_title"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:gravity="center"/>

    <RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  android:padding="@dimen/padding_medium"
     >

    <EditText android:id="@+id/alertname"
        android:hint="Enter alert name.."
        android:layout_width="match_parent"
        android:maxLength="18"

        android:layout_height="wrap_content"/> 
         <EditText android:id="@+id/speedlimit"
        android:hint="Enter speed limit in Km/hr"
        android:layout_width="match_parent"
        android:layout_below="@+id/alertname"
        android:lines="1"

        
        android:inputType="number"
        android:layout_height="wrap_content"/>

   <TextView
       android:id="@+id/tvalert"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@+id/speedlimit"
       android:text="Alert Mode "
       android:layout_marginTop="10dp"
       android:textColor="@color/white"
       android:textSize="20sp" />

    <LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/tvalert"
    android:id="@+id/layalert"
    android:orientation="horizontal" android:layout_marginBottom="10dp">    
     
            <CheckBox
                android:id="@+id/alertapp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true" 
                android:text="Push to APP"
                android:textSize="15sp"

                android:layout_marginRight="10dp"
                />
             
            <CheckBox
                android:id="@+id/alertemail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                                android:textSize="15sp"

                android:text="Email"
                 />
               <CheckBox
                android:id="@+id/alertsms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"

                android:text="SMS"
                 />
        
</LinearLayout>

     <ToggleButton
         android:id="@+id/toggleenable"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/layalert"
         android:layout_marginLeft="24dp"
         android:layout_toRightOf="@+id/tv_active"
         android:checked="true"
         android:background="@drawable/capsulshapebutton"
         android:textOn="Enable"
         android:textOff="Disable"
    />

     <Button
         android:id="@+id/alertsubmit"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/layalert"
         android:layout_below="@+id/toggleenable"
         android:layout_marginTop="14dp"
         android:padding="5sp"

         android:background="@drawable/capsulshapebutton"
         android:gravity="center"
         android:text="@string/Submit"
         android:textColor="@color/white" />

     <TextView
         android:id="@+id/tv_active"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBaseline="@+id/toggleenable"
         android:layout_alignBottom="@+id/toggleenable"
         android:layout_alignLeft="@+id/layalert"
         android:text="Active Mode  "
         android:textColor="@color/black"
         android:textSize="20sp" />

     
   
</RelativeLayout>
</LinearLayout>