<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    android:layout_gravity="center"
    >


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_medium"
    android:orientation="vertical">

    <EditText android:id="@+id/speedlimit"
        android:hint="Enter speed limit in Km/hr"
        android:layout_width="match_parent"
        android:layout_below="@+id/alertname"
        android:lines="1"
        android:inputType="number"
        android:layout_height="wrap_content"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/speedlimit"
        android:gravity="center"
        android:padding="5dp"
        >
        <Button
            android:id="@+id/alertcancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/layalert"
            android:layout_marginTop="14dp"
            android:background="@drawable/capsulshapebutton"
            android:gravity="center"
            android:layout_margin="3dp"
            android:text="@string/dialog_cancel"
            android:textColor="@color/white" />
        <Button
            android:id="@+id/alertsubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/layalert"
            android:layout_marginTop="14dp"
            android:background="@drawable/capsulshapebutton"
            android:gravity="center"
            android:layout_margin="3dp"

            android:text="@string/Submit"
            android:textColor="@color/white" />



    </LinearLayout>



</RelativeLayout>
    </android.support.v7.widget.CardView>