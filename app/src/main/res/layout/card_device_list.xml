<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="10dp"
    android:elevation="5dp"

    android:background="@color/colorPrimaryDark">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name : "
            android:layout_weight="70"
            android:textSize="20sp"
            android:padding="2dp"
            android:textColor="@color/black"
            android:layout_margin="2dp"
            android:id="@+id/label_name"
            android:gravity="start|left"
            />

        <TextView

            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/label_name"
            android:layout_alignBottom="@+id/label_name"
            android:layout_toEndOf="@+id/label_name"
            android:layout_toRightOf="@+id/label_name"
            android:layout_weight="30"
            android:padding="2dp"
            android:text="ssssss"
            android:textColor="@color/colorAccent"
            android:textSize="15sp" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IMEI NO : "
            android:layout_weight="70"
            android:textSize="20sp"
            android:layout_below="@+id/label_name"
            android:padding="2dp"
            android:textColor="@color/black"
            android:layout_margin="2dp"
            android:id="@+id/label_imei"
            />

        <TextView

            android:id="@+id/text_imei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/label_imei"
            android:layout_alignBottom="@+id/label_imei"
            android:layout_toEndOf="@+id/label_imei"
            android:layout_toRightOf="@+id/label_imei"
            android:layout_weight="30"
            android:padding="2dp"
            android:text="ssssss"
            android:textColor="@color/colorAccent"
            android:textSize="15sp" />


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expiry Date : "
            android:layout_weight="70"
            android:textSize="20sp"
            android:layout_below="@+id/label_imei"
            android:padding="2dp"
            android:textColor="@color/black"
            android:layout_margin="2dp"
            android:id="@+id/label_exp_date"
            />

        <TextView

            android:id="@+id/text_exp_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/label_exp_date"
            android:layout_alignBottom="@+id/label_exp_date"
            android:layout_toEndOf="@+id/label_exp_date"
            android:layout_toRightOf="@+id/label_exp_date"
            android:layout_weight="30"
            android:padding="2dp"
            android:text="ssssss"
            android:textColor="@color/colorAccent"
            android:textSize="15sp" />

        <!--
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/white"/>-->
    </RelativeLayout>

</android.support.v7.widget.CardView>