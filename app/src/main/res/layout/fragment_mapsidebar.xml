<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardBackgroundColor="@color/card_color"
   >

    <LinearLayout
        android:layout_width="wrap_content"
        android:id="@+id/lay_main"

        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/lay_child"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <com.primesys.VehicalTracking.Utility.CircularNetworkImageView
                android:id="@+id/img_child"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:adjustViewBounds="false" />

            <TextView
                android:id="@+id/txt_child"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="@android:color/white"
                android:text="Name"

                android:layout_toRightOf="@+id/img_child"
                android:gravity="center"
                android:textSize="@dimen/map_menu"
                android:textStyle="bold|normal"
                android:layout_centerInParent="true" />
        </RelativeLayout>



    </LinearLayout>
</android.support.v7.widget.CardView>