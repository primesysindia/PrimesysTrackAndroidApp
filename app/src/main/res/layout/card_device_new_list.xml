<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout android:id="@+id/lay_child"
    android:layout_width="wrap_content"
    android:padding="5dp"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <com.primesys.VehicalTracking.Utility.CircularNetworkImageView
            android:id="@+id/img_child"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:adjustViewBounds="false" />

        <TextView
            android:id="@+id/txt_child"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="Name"
            android:padding="5dp"

            android:layout_below="@+id/img_child"
            android:gravity="center"
            android:textSize="@dimen/map_menu"
            android:textStyle="bold|normal"
            android:layout_centerInParent="true" />
    </RelativeLayout>

