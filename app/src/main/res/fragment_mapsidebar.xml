<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="5dp"
    card_view:cardBackgroundColor="@color/card_color"
   >

                                                                                                                                                                                                                                                                                                                                                                                                        <RelativeLayout
            android:id="@+id/lay_child"
            android:layout_width="wrap_content"
            android:padding="2dp"
            android:layout_height="wrap_content"
          >

            <com.primesys.VehicalTracking.Utility.CircularNetworkImageView
                android:id="@+id/img_child"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_gravity="center"
                android:adjustViewBounds="false" />

            <TextView
                android:id="@+id/txt_child"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:textColor="@android:color/white"
                android:text="Name"
                android:layout_toRightOf="@+id/img_child"
                android:gravity="center"
                android:textSize="@dimen/map_menu"
                android:padding="3dp"
                android:textStyle="normal"
                android:layout_centerInParent="true" />
        </RelativeLayout>

</android.support.v7.widget.CardView>